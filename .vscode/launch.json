{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin_d/cowsay",
			"cwd": "${workspaceFolder}",
			"args": [
				"$(fortune)"
			],
			"preLaunchTask": "Build Debug",
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"setupCommands": [
				{
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}